---
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "../config/site";

const title = `Profile - ${siteConfig.title}`;
const description = "Manage your profile.";
---

<Layout title={title} description={description}>
  <div class="max-w-md mx-auto mt-16">
    <div
      class="bg-white dark:bg-slate-900 rounded-lg shadow-lg p-8 border border-slate-200 dark:border-slate-700"
    >
      <h1
        class="text-2xl font-bold text-center text-slate-900 dark:text-white mb-6"
      >
        Edit Profile
      </h1>

      <div class="text-center mb-6">
        <img
          id="current-profile-img"
          src=""
          alt="Current Profile"
          class="w-24 h-24 rounded-full mx-auto mb-4 hidden"
        />
        <div
          id="current-profile-icon"
          class="w-24 h-24 rounded-full bg-slate-300 dark:bg-slate-600 flex items-center justify-center text-slate-700 dark:text-slate-300 mx-auto mb-4 hidden"
        >
          <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
        <p class="text-sm text-slate-600 dark:text-slate-400">
          Click the avatar in the header to return here.
        </p>
      </div>

      <form class="space-y-4" id="profile-form">
        <div>
          <label
            for="new-profile-pic"
            class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1"
            >Change Profile Picture</label
          >
          <input
            type="file"
            id="new-profile-pic"
            name="new-profile-pic"
            accept="image/*"
            class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:text-white"
          />
        </div>

        <button
          type="submit"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          Update Profile
        </button>
      </form>

      <p class="text-center text-sm text-slate-600 dark:text-slate-400 mt-4">
        <a href="/" class="text-blue-600 hover:text-blue-500 dark:text-blue-400"
          >Back to Home</a
        >
      </p>
    </div>
  </div>
</Layout>

<script>
  // Load current profile on page load
  document.addEventListener("DOMContentLoaded", function () {
    const profilePic =
      localStorage.getItem("image") || localStorage.getItem("profilePic");
    const user = localStorage.getItem("user");
    const currentImg = document.getElementById("current-profile-img");
    const currentIcon = document.getElementById("current-profile-icon");

    if (profilePic) {
      currentImg.src = profilePic;
      currentImg.onerror = function () {
        this.src = "https://www.w3schools.com/w3images/avatar2.png";
      };
      currentImg.classList.remove("hidden");
    } else if (user) {
      // Use default human avatar
      currentImg.src = "https://www.w3schools.com/w3images/avatar2.png";
      currentImg.classList.remove("hidden");
    } else {
      currentIcon.classList.remove("hidden");
    }
  });

  // Handle form submission
  document
    .getElementById("profile-form")
    .addEventListener("submit", function (e) {
      e.preventDefault();
      const fileInput = document.getElementById("new-profile-pic");
      const file = fileInput.files[0];

      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          localStorage.setItem("profilePic", e.target.result);
          alert("Profile picture updated!");
          window.location.reload(); // Reload to show new image
        };
        reader.readAsDataURL(file);
      } else {
        alert("Please select a file.");
      }
    });
</script>
