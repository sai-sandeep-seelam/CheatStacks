---
import SearchBar from './SearchBar.astro';
import ThemeToggle from './ThemeToggle.astro';
import { siteConfig } from '../config/site';
import { Menu, Github } from 'lucide-astro';
---

<header class="sticky top-0 z-50 w-full backdrop-blur flex-none transition-colors duration-500 border-b border-slate-900/10 dark:border-slate-50/[0.06] bg-white/95 supports-backdrop-blur:bg-white/60 dark:bg-slate-900/75">
  <div class="max-w-8xl mx-auto">
    <div class="py-4 px-4 lg:px-8">
      <div class="relative flex items-center justify-between">
        
        <div class="flex items-center">
            <button type="button" class="lg:hidden p-2 -ml-2 text-slate-500 hover:text-slate-600 dark:text-slate-400 dark:hover:text-slate-300 mr-2" id="menu-button" aria-label="Open sidebar">
                <Menu class="w-6 h-6" />
            </button>
            
            <a class="flex items-center gap-2 mr-4" href="/">
              <span class="font-bold text-xl text-slate-900 dark:text-white tracking-tight">{siteConfig.title}</span>
            </a>
        </div>

        <div class="flex-1 max-w-2xl mx-4 hidden md:block">
            <SearchBar />
        </div>

        <div class="flex items-center gap-4">
            <nav class="text-sm font-semibold text-slate-700 dark:text-slate-200 hidden lg:block">
                <ul class="flex space-x-6">
                    <li><a href="/about" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">About</a></li>
                </ul>
            </nav>
            
            <div class="flex items-center border-l border-slate-200 ml-2 pl-4 dark:border-slate-800 gap-2">
                <ThemeToggle />
                <a href={siteConfig.github} class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800 text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 transition-colors" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                    <Github class="w-5 h-5" />
                </a>
            </div>
        </div>

      </div>
      <div class="md:hidden mt-4">
         <SearchBar />
      </div>
    </div>
  </div>
</header>
